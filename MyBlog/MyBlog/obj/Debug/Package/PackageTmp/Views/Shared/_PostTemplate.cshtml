@model MyBlog.Core.Post
@using MyBlog


<div class="post">
 <!-- <div class="post-meta" style="float:right;width:200px">

                    </div>-->
    <div class="row">
 
      <!--Heading-->
      <div class="post-title">
      <br />
        <h2>@Html.PostLink(Model)</h2>
      </div>
 
    </div>

    <div class="row">
 
      <!--Category-->
      <div class="post-category">
        <span>Category: </span>@Html.CategoryLink(Model.Category)
      </div>
 
      <!--Tags-->
      <div class="post-tags">
        <span>Tags:</span>@Helpers.Tags(Html, Model.Tags)
      </div>

        <!-- DISPLAY THE COMMENTS COUNT
       <body>
      <div class="no-of-comments">
        <a href="@string.Format("{0}#disqus_thread", Model.Href(Url))"></a>
      </div>
      </body>-->

      <!--Posted date-->
      <div class="posted-date">
        @Model.PostedOn.ToConfigLocalTime()
      </div>
 
    </div>
 
  <!--Short Description-->
  <div class="post-body">
  <br />
    @Html.Raw(Model.Description)
    <br />
  </div>
 
  <div class="post-foot">
  <hr class="style-three">

